<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Vitals.Widget.SettingsWindow"
        Title="Vitals Widget Settings"
        Width="360"
        SizeToContent="Height"
        CanResize="False">

  <StackPanel Margin="16" Spacing="14">

    <TextBlock Text="Widget settings"
               FontSize="18"
               FontWeight="SemiBold"/>

    <Grid ColumnDefinitions="Auto,*,Auto"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto"
          ColumnSpacing="12"
          RowSpacing="12">

      <TextBlock Grid.Row="0" Grid.Column="0"
                 Text="Font size"
                 VerticalAlignment="Center"/>

      <Slider Grid.Row="0" Grid.Column="1"
              x:Name="FontSizeSlider"
              Minimum="8" Maximum="30"
              TickFrequency="1"
              IsSnapToTickEnabled="True"
              ValueChanged="FontSizeSlider_OnValueChanged"/>

      <TextBlock Grid.Row="0" Grid.Column="2"
                 x:Name="FontSizeValue"
                 Width="50"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"/>


      <TextBlock Grid.Row="1" Grid.Column="0"
                 Text="Width"
                 VerticalAlignment="Center"/>

      <Slider Grid.Row="1" Grid.Column="1"
              x:Name="WidthSlider"
              Minimum="50" Maximum="240"
              TickFrequency="1"
              IsSnapToTickEnabled="True"
              ValueChanged="WidthSlider_OnValueChanged"/>

      <TextBlock Grid.Row="1" Grid.Column="2"
                 x:Name="WidthValue"
                 Width="50"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"/>


      <TextBlock Grid.Row="2" Grid.Column="0"
                 Text="Opacity"
                 VerticalAlignment="Center"/>

       <TextBlock Grid.Row="3" Grid.Column="0"
           Text="Units"
           VerticalAlignment="Center"/>

<ComboBox Grid.Row="3" Grid.Column="1"
          x:Name="UnitsCombo"
          MinWidth="160">
  <ComboBoxItem Content="Celsius (°C)"/>
  <ComboBoxItem Content="Fahrenheit (°F)"/>
</ComboBox>

<TextBlock Grid.Row="3" Grid.Column="2"/>


<TextBlock Grid.Row="4" Grid.Column="0"
           Text="Show labels"
           VerticalAlignment="Center"/>

<CheckBox Grid.Row="4" Grid.Column="1"
          x:Name="ShowLabelsCheckBox"
          Content="CPU / GPU text"/>

<TextBlock Grid.Row="4" Grid.Column="2"/>
          

      <Slider Grid.Row="2" Grid.Column="1"
              x:Name="OpacitySlider"
              Minimum="0.05" Maximum="1"
              TickFrequency="0.05"
              ValueChanged="OpacitySlider_OnValueChanged"/>

      <TextBlock Grid.Row="2" Grid.Column="2"
                 x:Name="OpacityValue"
                 Width="50"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"/>

    </Grid>

    <Border Margin="0,10,0,0"
        Padding="0,10,0,0"
        BorderThickness="0,1,0,0"
        BorderBrush="#22000000">

  <Grid ColumnDefinitions="*,Auto,Auto"
        ColumnSpacing="10"
        VerticalAlignment="Center">

    <Button Grid.Column="1"
            Content="Reset"
            MinWidth="90"
            Click="Reset_OnClick"
            Classes="secondary"/>

    <Button Grid.Column="2"
            Content="Close"
            MinWidth="90"
            Click="Close_OnClick"
            Classes="primary"/>

  </Grid>
</Border>


  </StackPanel>
</Window>

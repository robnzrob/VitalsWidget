<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Vitals.Widget.MainWindow"
        Title="Vitals.Widget"
        Width="130"
        SizeToContent="Height"
        CanResize="False"
        SystemDecorations="None"
        Topmost="True"
        TransparencyLevelHint="Transparent"
        Background="#00000000">
          <Window.Styles>
    <!-- Primary/secondary buttons for the dialog footer -->
    <Style Selector="Button.primary">
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Padding" Value="14,8"/>
      <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style Selector="Button.secondary">
      <Setter Property="Padding" Value="14,8"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Opacity" Value="0.95"/>
    </Style>
  </Window.Styles>


  <Border x:Name="RootBorder"
          CornerRadius="10"
          Padding="10,8"
          Background="#00000000"
          PointerPressed="Border_OnPointerPressed">

    <Border.ContextMenu>
      <ContextMenu Opened="ContextMenu_OnOpened">

        <MenuItem x:Name="LockMenuItem"
                  Header="Lock position"
                  ToggleType="CheckBox"
                  Click="Lock_OnClick"
                  />
                  

        <Separator/>

        <MenuItem x:Name="ShowCpuMenuItem"
                  Header="Show CPU"
                  ToggleType="CheckBox"
                  
                  Click="ShowCpu_OnClick"/>

        <MenuItem x:Name="ShowGpuMenuItem"
                  Header="Show GPU"
                  ToggleType="CheckBox"
                  Click="ShowGpu_OnClick"/>

        <Separator/>       

        <MenuItem Header="Reset position" Click="ResetPosition_OnClick"/>
        <Separator/>
<MenuItem Header="Settings..." Click="Settings_OnClick"/>


        <Separator/>

        <MenuItem Header="Exit" Click="Exit_OnClick"/>

      </ContextMenu>
    </Border.ContextMenu>

    <StackPanel Spacing="6">

      <TextBlock x:Name="PlaceholderText"
                 Text="Vitals"
                 FontSize="22"
                 FontWeight="SemiBold"
                 Foreground="Gainsboro"
                 IsVisible="False"/>

      <TextBlock x:Name="CpuText"
                 Text="CPU ..."
                 FontSize="22"
                 FontWeight="SemiBold"
                 Foreground="Lime"/>

      <TextBlock x:Name="GpuText"
                 Text="GPU ..."
                 FontSize="22"
                 FontWeight="SemiBold"
                 Foreground="Lime"/>

    </StackPanel>

  </Border>
</Window>
